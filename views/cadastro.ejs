<div class="login-main">
<div class="container-login">
  <div class="header">
    <a href="/" class="back-arrow">←</a>
  </div>
  <h1>Criar nova conta</h1>

  <form class="form" action="/auth/cadastro" method="POST">
    <label for="name">Nome</label>
    <input type="text" id="name" name="nome" placeholder="" required />

    <label for="email">Email</label>
    <input type="email" id="email" name="email" placeholder="" required />

    <label for="password">Senha</label>
    <input type="password" id="password" name="senha" placeholder="" required />

    <label for="datanasc">Data de Nascimento</label>
    <input type="date" id="datanasc" name="datanasc" required />

    <label for="fone">Telefone</label>
    <input
      type="text"
      id="fone"
      name="fone"
      placeholder="(xx) xxxx-xxxx"
      required
    />

    <button type="submit" class="btn">Cadastrar-se</button>

    <div class="links">
        <p><a href="/">Já é um cliente? Login</a></p>
      </div>

    <!-- Exibe mensagens de erro -->
    <% if (typeof errorMessage !== 'undefined') { %>
        <div class="error-message">
            <%= errorMessage %>
        </div>
    <% } %>
  </form>
</div>
</div>